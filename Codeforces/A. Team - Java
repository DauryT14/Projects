import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int n = scan.nextInt();
        int i = 0;
        int count = 0;
 
        while(i < n){
            int a = scan.nextInt();
            int b = scan.nextInt();
            int c = scan.nextInt();
 
            if(a == 1 && b == 1 || b == 1 && c == 1 || a == 1 && c == 1){
                count++;
            }
 
 
            i++;
        }
        System.out.println(count);
 
    }
}
